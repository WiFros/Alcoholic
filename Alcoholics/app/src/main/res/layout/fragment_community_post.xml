<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Board"
    android:orientation="vertical"
    android:id= "@+id/postContent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginRight="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/menu_community"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/btn_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:textColor="@color/white"
            android:text="신고"
            android:textSize="15sp">

        </Button>


    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample nickname"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/timeline"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Sample timeline"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="32dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginTop="11dp"
            android:background="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeline" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <!-- 게시글 올리는 자리 -->
    <!-- 게시글 크기 우선 200dp, 나중에 wrap_content? -->
    <TextView
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="안녕하세요~ 칵테일 처음 만들어봐요 ^^"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginTop="11dp"
        android:background="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/post" />
    <TextView
        android:id="@+id/reply_list"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="아직 댓글이 없어요. 가장 먼저 댓글을 남겨보세요."
        android:textSize="14sp"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:background="@drawable/round"
            app:srcCompat="@drawable/icon_comment"
            android:clipToOutline="true"

            />

        <EditText
            android:id="@+id/reply_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="댓글을 입력해주세요."
            android:inputType="textMultiLine"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:maxLines="10" />

        <Button
            android:id="@+id/enter"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입력"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>


</LinearLayout>